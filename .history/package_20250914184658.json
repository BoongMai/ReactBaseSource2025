{
  "name": "base-source",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "build:qa": "NODE_ENV=development VITE_APP_ENV=qa vite build",
    "build:uat": "NODE_ENV=production VITE_APP_ENV=uat vite build",
    "serve": "vite preview",
    "serve:prod": "vite preview --port 3000 --host",
    "serve:qa": "vite preview --port 3001 --host",
    "serve:uat": "vite preview --port 3002 --host",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src --fix",
    "lint:check": "eslint --ext .ts,.tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "analyze": "npm run build && node scripts/analyze-bundle.js",
    "analyze:visual": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "clean": "rm -rf dist node_modules/.vite",
    "preview": "npm run build && npm run serve",
    "docker:build": "docker build -t base-source .",
    "docker:run": "docker run -p 3000:80 base-source",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:qa": "docker-compose -f deploy-qa.yml up -d --build",
    "deploy:uat": "docker-compose -f deploy-uat.yml up -d --build",
    "stop:qa": "docker-compose -f deploy-qa.yml down",
    "stop:uat": "docker-compose -f deploy-uat.yml down",
    "logs:qa": "docker-compose -f deploy-qa.yml logs -f",
    "logs:uat": "docker-compose -f deploy-uat.yml logs -f",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@tanstack/react-query": "^5.0.0",
    "@types/papaparse": "^5.3.16",
    "antd": "^5.9.0",
    "axios": "^1.4.0",
    "browser-image-compression": "^2.0.2",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.45.0",
    "react-hot-toast": "^2.4.0",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^6.14.0",
    "vite-plugin-pwa": "^1.0.3",
    "xlsx": "^0.18.5",
    "zod": "^3.22.2",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "glob": "^11.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.3.6",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
